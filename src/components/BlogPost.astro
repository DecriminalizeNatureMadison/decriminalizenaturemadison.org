---
import { Image } from "astro:assets"
const { img, alt, postTitle, excerpt, imgHeight= 100, path } = Astro.props
---
<div class="flex flex-row gap-5">
    <div>
        <Image src={img} alt={alt} height={imgHeight} />
    </div>
    <div class="space-content">
        <a href={`/blog/${path}`}>{postTitle}</a>
        <p>{excerpt}</p>
    </div>
</div>
